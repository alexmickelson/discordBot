{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Client & API",
      "configurations": ["Debug API", "Debug Client"]
    }
  ],
  "configurations": [
    {
      "name": "Debug API",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/api/main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/api/src"
      },
      "justMyCode": false,
      "python": "uv",
      "args": ["run", "fastapi", "dev", "main.py", "--host", "0.0.0.0", "--port", "8080"],
      "cwd": "${workspaceFolder}/api"
    },
    {
      "name": "Debug Client",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev", "--host"],
      "cwd": "${workspaceFolder}/client",
      "console": "integratedTerminal"
    }
  ]
}
